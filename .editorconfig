# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# configuration files
[.*]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
indent_style = space
tab_width = 4

# Org mode indentation
[*.org]
indent_style = space
indent_size = 4

# CMake coding style
[CMakeLists*.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

[*.{md,wiki}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.lua]
indent_style = space
indent_size = 2

[fugitive://**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

